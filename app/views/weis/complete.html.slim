script src="//maps.google.com/maps/api/js?key=AIzaSyCm28TnBcu31klcqaMLia4ntDyYTsoZrfg"
script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"
script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js'

#map style="width: 418px; height: 800px;"

javascript:
  handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'map'} }, function(){
    markers = handler.addMarkers([
      {
        lat: "#{@wei_girl.location.latitude}",
        lng: "#{@wei_girl.location.longitude}",
        picture: {
          url: "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
          width:  36,
          height: 36
        },
        infowindow: "hello!"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
